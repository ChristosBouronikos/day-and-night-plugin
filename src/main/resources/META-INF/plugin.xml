<idea-plugin>
    <id>com.daynight.plugin</id>
    <name>Day And Night</name>
    <vendor email="ignatbav@gmail.com">Ignat Bavtovich</vendor>
    <description>This plugin added possibility for automatic theme and color scheme changes according user's schedule settings</description>

    <depends>com.intellij.modules.platform</depends>

    <application-components>
        <component>
            <implementation-class>com.daynight.plugin.components.PluginPropertiesComponent</implementation-class>
        </component>
        <component>
            <implementation-class>com.daynight.plugin.components.ChangeSchemeOnStartUpComponent</implementation-class>
        </component>
        <component>
            <implementation-class>com.daynight.plugin.components.ScheduledTasksComponent</implementation-class>
        </component>
    </application-components>

    <project-components>
        <component>
            <implementation-class>com.daynight.plugin.components.WidgetInitComponent</implementation-class>
        </component>
    </project-components>

    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable groupId="other" displayName="Day and Night" id="preference.DayNightConfigurable"
                                 instance="com.daynight.plugin.configuration.DayNightConfigurable" />
    </extensions>

    <actions>
        <action id="DayNightChangeColor" class="com.daynight.plugin.actions.ChangeIdeAppearanceAction" text="DayNightChangeColor"/>
    </actions>
</idea-plugin>